# Copy to .env and fill in values for local development
# Example values below; update accordingly for your environment.

# MongoDB connection URI (optional for local dev). If not set, app will skip DB connect.
MONGO_URI=

# Port the backend listens on
PORT=5000

# When true (and NODE_ENV != 'production'), protected routes will be allowed without
# an Authorization header. Useful for local dev when you don't have auth setup yet.
ALLOW_DEV_AUTH_BYPASS=true

# NODE_ENV=development
# Copy this to .env and fill values
PORT=5000
MONGO_URI=mongodb://localhost:27017/emexa_dev

# Example: add any secrets here (JWT_SECRET, etc.)
# JWT_SECRET=your_jwt_secret
